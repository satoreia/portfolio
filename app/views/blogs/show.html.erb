<% breadcrumb :blog %>

<div class="row blogindex-visual">
	<p class="about-visual-text"><strong> Staff Blog</strong></p>
</div>

<% if staff_signed_in? %>
	<div class="col-md-2 col-md-offset-8">
		<p> <%= link_to '編集', edit_blog_path(@blog.id) %> /  <%=link_to '削除', blog_path, method: 'delete', "data-confirm" => "本当に削除しますか？" %></p>
		<p> 投稿者：<%= @blog.contributor %></p>
	</div>
<% end %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h3 class="col-md-12">　　　<%= @blog.title %>
		</h3>
		<div class="col-md-12">
			<div class=" ub">
		</div>
		<div class="text-right">
			<p><%= @blog.created_at.strftime('%Y/%m/%d') %>　　　<p>
		</div>
		<div class="text-center">
			<%= attachment_image_tag @blog, :blog_image, :fill, 500, 300, format: 'jpeg' %>
		</div>
		<div class="col-md-10 col-md-offset-1 top">
			<%= @blog.body %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-2 col-md-offset-8 top">
		<%= link_to '一覧へ戻る', blogs_path %>
	</div>
</div>