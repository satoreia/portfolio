<% breadcrumb :blogs %>
<div class="row blogindex-visual">
	<p class="about-visual-text"><strong> Staff Blog</strong></p>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<% @blogs.each do |blog| %>
		<%= attachment_image_tag blog, :blog_image, :fill, 100, 100, format: 'jpeg' %>　　
		<span><%= link_to blog.title, blog_path(blog.id) %></span>
		<br>
		<% end %>
	</div>
		<div class="col-md-2">
		</div>
</div>

<div class="row">
	<div class="text-center">
		<%= paginate @blogs, class: "pagenate" %>
	</div>
</div>
