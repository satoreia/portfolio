<% breadcrumb :blogs %>
<div class="row blogindex-visual">
	<p class="about-visual-text"><strong> Staff Blog</strong></p>
</div>

<% @blogs.each do |blog| %>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="col-md-4 text-center">
				<%= link_to blog_path(blog.id) do %>
				<%= attachment_image_tag blog, :blog_image, :fill, 130, 130, format: 'jpeg' %>
				<% end %>
			</div>
			<div class="col-md-8">
				<h3><%= link_to blog.title, blog_path(blog.id) %></h3>
				<div> <%= blog.created_at.strftime('%Y/%m/%d') %></div>
				<div><%= blog.body %></div>
			</div>
		</div>
	</div>
	<div class="row col-md-8 col-md-offset-2">
		<div class=" ub">
		</div>
	</div>
<% end %>

<div class="row">
	<div class="text-center">
		<%= paginate @blogs, class: "pagenate" %>
	</div>
</div>
