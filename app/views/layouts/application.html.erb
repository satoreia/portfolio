<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if staff_signed_in? %>
	  	<header>
			<div class="container">
				<a class="headline"> Co-Working Space</a>
				<div class="row">
					<div class="col-md-4 col-md-offset-8">
						<ul class="nav nav-pills nav-text">
							<li class="left"> <%= link_to 'Top', staff_home_path %></li>
							<li> <%= link_to 'Logout', destroy_staff_session_path, method: :delete %></li>
						</ul>
					</div>
				</div>
			</div>
		</header>
  	<% else %>
	  	<header>
			<div class="container">
				<a class="headline"> Co-Working Space</a>
				<div class="row">
					<div class="col-md-4 col-md-offset-4">
						<ul class="nav nav-pills nav-text">
							<li class="left"> <%= link_to 'Home', root_path %></li>
							<li> <%= link_to 'About', about_path %></li>
							<li> <%= link_to 'Price', price_path %></li>
							<li> <%= link_to 'Access', access_path %></li>
						</ul>
					</div>
				</div>
			</div>
		</header>
	<% end %>

	<div class="container">
		<%= yield %>
	</div>

	<% if staff_signed_in? %>
		<footer class="container text-center">
			<div class="sitemap">
	   	    <p class="text-white">Go To "<%= link_to "co-working Space", root_path %>"          @2018.co-working Space</p>
	   		</div>
		</footer>
	<% else %>
		<footer class="container text-center">
			<div class="sitemap">
			<ul class="nav nav-pills sitemap-text">
				<li> <%= link_to 'Home', root_path %></li>
				<li> <%= link_to 'About', about_path %></li>
				<li> <%= link_to 'Price', price_path %></li>
				<li> <%= link_to 'Access', access_path %></li>
				<li> <%= link_to 'Q&A', qanda_path %></li>
				<li> <%= link_to 'Staff Blog', blogs_path %></li>
				<li> <%= link_to 'News', news_index_path %></li>
			</ul>
	   	    <p class="text-white">@2018.co-working Space</p>
	   		</div>
		</footer>
	<% end %>
  </body>
</html>



