<div>
<h3>Aboutについて新規作成</h3>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="form-horizontal">
			<%= form_for(@about) do |f| %>
				<% if @about.errors.any? %>
				    <div id="error_explanation" class="alert alert-danger">
				    	<h style="color: red;">空白の欄があります。全て入力してください。</h>
					    <ul>
					      <% @about.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					    </ul>
				    </div>
				<% end %>

				<div class="field">
					<%= f.label :title %><br>
					<%= f.text_field :title, :class => "form-control" %>
				</div>
				<div class="field">
					<%= f.label :body %><br>
					<%= f.text_area :body, rows:20, :class => "form-control" %>
				</div>

				<div class="actions">
					<%= f.submit '投稿', class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>