<div class="row newsindex-visual">
	<p class="about-visual-text"><strong> News</strong></p>
</div>

<% breadcrumb :news_index %>
<%= render partial:'layouts/breadcrumb' %>

<div class="row">
	<div class="col-md-8 col-md-offset-3">
		<div class="news-line">
			<% @news.each do |news| %>
			<%= news.created_at.strftime('%Y/%m/%d') %>　　
			<span><%= link_to news.title, news_path(news.id) %></span>
			<br>
			<% end %>
		</div>
	</div>
	<div class="col-md-2"> </div>
</div>

<div class="row">
	<div class="text-center">
		<%= paginate @news, class: "pagenate" %>
	</div>
</div>