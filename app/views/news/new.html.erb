
<div class="row newsindex-visual">
	<p class="about-visual-text"><strong> News</strong></p>
</div>

<div class="row concept">
	<h2 class="title"> Newsを投稿しましょう！</h2>
	<p class="concept-text">
	</p>
</div>

<div class="row">
	<div class="col-md-8 col-md-offset-3">
		<div class="col-md-12">
		<%= form_for(@new) do |f| %>
			<p> <b>Date</b><br>
				投稿した日が表示されます。
			</p>
			<div class="field">
				<%= f.label :title %><br>
				<%= f.text_field :title, :size=>"" %>
			</div>
			<div class="field">
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
			<div class="field">
				<%= f.label :contributor %><br>
				<%= f.text_field :contributor %>
			</div>
			<div class="col-md-2 col-md-offset-8">
				<%= f.submit '投稿' %>
			</div>
		<% end %>
		</div>
	</div>

</div>