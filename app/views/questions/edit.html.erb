<div>
<h3>Q & Aについて編集</h3>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="form-horizontal">
			<%= form_for(@question) do |f| %>
				<% if @question.errors.any? %>
				    <div id="error_explanation" class="alert alert-danger">
				    	<h style="color: red;">空白の欄があります。全て入力してください。</h>
					    <ul>
					      <% @question.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					    </ul>
				    </div>
				<% end %>

				<div class="field">
					<%= f.label :question %><br>
					<%= f.text_field :question, :class => "form-control" %>
				</div>
				<div class="field">
					<%= f.label :answer %><br>
					<%= f.text_area :answer, rows:20, :class => "form-control" %>
				</div>

				<div class="actions">
					<%= f.submit '編集', class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>